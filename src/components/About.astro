<style>
	/* ---------------------------------- */
	/*  Section                           */
	/* ---------------------------------- */
	.about {
		background-color: var(--color-white);
	}

	.about-inner {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 5rem;
		max-width: 1200px;
		margin: 0 auto;
		padding: 6rem 2rem;
	}

	/* ---------------------------------- */
	/*  Text column                       */
	/* ---------------------------------- */
	.about-text {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.about-heading {
		font-size: clamp(1.875rem, 3.5vw, 2.5rem);
		color: var(--color-forest-deep);
		letter-spacing: -0.015em;
	}

	.about-text p {
		font-size: 1.0625rem;
		line-height: 1.75;
		color: var(--color-text-light);
	}

	.about-academic-link {
		position: relative;
		display: inline-block;
		align-self: flex-start;
		font-family: var(--font-body);
		font-size: 0.9375rem;
		font-weight: 500;
		color: var(--color-forest);
		transition: color 0.2s ease;
	}

	.about-academic-link::after {
		content: '';
		position: absolute;
		bottom: -2px;
		left: 0;
		width: 0;
		height: 1.5px;
		background-color: var(--color-gold);
		transition: width 0.3s ease;
	}

	.about-academic-link:hover {
		color: var(--color-forest-deep);
	}

	.about-academic-link:hover::after {
		width: 100%;
	}

	/* ---------------------------------- */
	/*  Credentials column                */
	/* ---------------------------------- */
	.about-credentials {
		padding-top: 0.25rem;
	}

	.credentials-heading {
		font-family: var(--font-body);
		font-size: 0.8125rem;
		font-weight: 600;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--color-text-muted);
		margin-bottom: 1.75rem;
	}

	/* Groups container */
	.cred-groups {
		display: flex;
		flex-direction: column;
		gap: 1.75rem;
	}

	/* Individual group */
	.cred-group-label {
		font-family: var(--font-body);
		font-size: 0.6875rem;
		font-weight: 600;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		color: var(--color-sage);
		margin: 0 0 0.625rem;
	}

	/* Items within a group */
	.cred-items {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	/* Standard item: role + institution stacked */
	.cred-item {
		display: flex;
		flex-direction: column;
		gap: 0.0625rem;
	}

	/* Compact item: institution + date on one line */
	.cred-item--compact {
		flex-direction: row;
		align-items: baseline;
		gap: 0.375rem;
	}

	.cred-role {
		font-family: var(--font-body);
		font-size: 0.875rem;
		font-weight: 500;
		color: var(--color-forest);
		line-height: 1.4;
	}

	.cred-inst {
		font-family: var(--font-body);
		font-size: 0.875rem;
		font-weight: 400;
		color: var(--color-text-light);
		line-height: 1.4;
	}

	.cred-date {
		font-size: 0.8125rem;
		font-weight: 400;
		color: var(--color-text-muted);
		white-space: nowrap;
	}

	/* Subgroups within a group (e.g. Bestyrelsesarbejde) */
	.cred-subgroup {
		margin-bottom: 0.75rem;
	}

	.cred-subgroup:last-child {
		margin-bottom: 0;
	}

	.cred-subgroup-label {
		font-family: var(--font-body);
		font-size: 0.8125rem;
		font-weight: 500;
		color: var(--color-forest);
		margin: 0 0 0.375rem;
	}

	/* ---------------------------------- */
	/*  Responsive                        */
	/* ---------------------------------- */
	@media (max-width: 1024px) {
		.about-inner {
			grid-template-columns: 1fr;
			gap: 3rem;
		}
	}

	@media (max-width: 768px) {
		.about-inner {
			padding: 4rem 1.5rem;
		}

		.cred-item--compact {
			flex-wrap: wrap;
		}
	}
</style>
